{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Run tests with debugger",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
            "-r",
            "ts-node/register",
            "--colors",
            "${workspaceFolder}/packages/*/test/**/*.ts",
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
      }
  ]
}
